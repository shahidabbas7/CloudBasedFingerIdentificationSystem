@model IEnumerable<CloudBasedFingerIdentificationSystem.Models.ViewModels.DivisionVM>

@{
    ViewBag.Title = "division";
}

<h2>division</h2>
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    <div class="text-right">
        @Html.ActionLink("Add New Division", "adddivision")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DivisionCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DivisionName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DivisionCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DivisionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "editdivision", new { id=item.DivisionCode}) |
                @Html.ActionLink("Delete", "deletedivision", new { id=item.DivisionCode },new {@class="delete" })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $(function(){
        $("a.delete").click(function () {
            if (!confirm("Are you sure you want to delete  Designation")) return false;
        });
    });
    </script>
}