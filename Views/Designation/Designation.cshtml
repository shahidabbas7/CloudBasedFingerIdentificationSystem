@model IEnumerable<CloudBasedFingerIdentificationSystem.Models.ViewModels.DesignationVM>

@{
    ViewBag.Title = "Designation";
}

<h2>Designation</h2>
@if (TempData["sm"] != null)
{
    <div class="alert alert-success">
        @TempData["sm"]
    </div>
}
<p>
    @Html.ActionLink("Add New Designation", "adddesignation")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.desigcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.designame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reports_to)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.desigcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.designame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reports_to)
            </td>
            <td>
                @Html.ActionLink("Edit", "editDeignation", new { id = item.desigcode }) |
                @Html.ActionLink("Delete", "DeleteDesignation", new { id = item.desigcode }, new { @class = "delete" })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("a.delete").click(function () {
                if (!confirm("Are you sure you want to delete  Designation")) return false;
            });
        });
    </script>
}
